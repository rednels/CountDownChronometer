<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="计时器" android:layout_width="wrap_content"
        android:padding="16dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <Chronometer
        android:id="@+id/chronometer"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.vcokey.widget.CountDownChronometer
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:padding="16dp"
        android:layout_below="@id/chronometer"
        android:id="@+id/countdownchronometer"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/countdownchronometer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:hint="设置倒计时时间"
            android:id="@+id/edit"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="设置时间"
            android:id="@+id/set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="开始/重新计时"
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="暂停"
            android:id="@+id/pause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="继续"
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>
</RelativeLayout>
